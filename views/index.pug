extends layout

block content   
    body
    h1 Books
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
            tr
        thead
        each book in books
            book
                tr
                    td
                        a(href=`/books/${book.id}`)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year
    p
        a(class="button" href="/books/new") Add New Entry
